{
  "name": "minutephp/minutephp",
  "description": "The Minute Framework",
  "type": "project",
  "license": "MIT",
  "keywords": ["angularjs", "php", "framework"],
  "authors": [
    {
      "name": "Sanchit Bhatnagar",
      "email": "dev@minutephp.com"
    }
  ],
  "require": {
    "php": ">=7",
    "minutephp\/admin": "*",
    "minutephp\/affiliate": "*",
    "minutephp\/auth": "*",
    "minutephp\/autoresponder": "*",
    "minutephp\/aws": "*",
    "minutephp\/bonus": "*",
    "minutephp\/bug": "*",
    "minutephp\/cli": "*",
    "minutephp\/cms": "*",
    "minutephp\/cron": "*",
    "minutephp\/debug": "*",
    "minutephp\/first-run": "*",
    "minutephp\/framework": "*",
    "minutephp\/mail": "*",
    "minutephp\/member": "*",
    "minutephp\/minify": "*",
    "minutephp\/payment": "*",
    "minutephp\/product": "*",
    "minutephp\/project": "*",
    "minutephp\/site": "*",
    "minutephp\/support": "*",
    "minutephp\/todo": "*",
    "minutephp\/translate": "*",
    "minutephp\/user": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Minute\\": "minute/",
      "Test\\": "test/"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "cd public/static && bower -F install",
      "cd public/static && typings install",
      "php vendor/minutephp/cli/bin/minutephp first-run"
    ],
    "post-package-install": [
      "App\\Config\\Plugins::installPlugin"
    ],
    "pre-package-uninstall": [
      "App\\Config\\Plugins::removePlugin"
    ]
  },
  "repositories": [
    {"type": "composer", "url": "http://plugins.minutephp.com"}
  ],
  "config": {
    "secure-http": false
  }
}
